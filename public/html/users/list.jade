.container-fluid: .row: .col-sm-12
	h3.no-top-margin Users
		button.btn.btn-primary.pull-right(ng-click="addUser()") New User

	table.table
		thead: tr
			th Name
			th Username
			th Email
			th &nbsp;
		tr(ng-repeat="u in users" ng-class="{ info: u.id == user.id }")
			td {{ u.name }}
			td {{ u.username }}
			td {{ u.email }}
			td
				.btn-group.pull-right
					button.btn.btn-info.btn-xs(ui-sref="users.user({ user_id: u.id })") Update User

	p(ng-show="users.length == 0") No Users
